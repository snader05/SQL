-- Create a craft store database

CREATE TABLE store_items (id INTEGER PRIMARY KEY, item_name TEXT, price INTEGER, aisle INTEGER, available TEXT);

INSERT INTO store_items VALUES 
(1, "Yarn", 5, 3, "Yes"),
(2, "Hooks", 2, 3, "Yes"),
(3, "Stuffing", 4, 5, "No"),
(4, "Buttons", 2, 4, "Yes"),
(5, "Pins", 1, 3, "No");

-- display the database ordered by aisle 
SELECT * FROM store_items
ORDER BY aisle asc; 
